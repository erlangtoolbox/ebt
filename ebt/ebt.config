{version, {shell, "../version.sh"}}.
{build, {shell, "printf '%d' $BUILD_NUMBER"}}.

{profiles, [
    {default, [
        {perform, [escript, package]}
    ]}
]}.

{compile, [
    {sources, [
        ["src/ebt_task.erl"],
        ["src/*.erl"]
    ]},
    {flags, [warnings_as_errors, debug_info]}
]}.

{libraries, ["../lib"]}.

{escript, [
    {ebt, "-noshell -noinput +d", ["priv/*"]}
]}.
