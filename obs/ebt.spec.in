%define realname ebt

Name:          %{realname}
Version:       @version@
Release:       0
License:       BSD-3-Clause
Group:         Development/Tools/Building
Source:        %{realname}-%{version}.zip
Summary:       Erlang Build Tool
URL:           https://github.com/erlangtoolbox/%{realname}
Requires:      erlang >= R15B03 erlang-dialyzer erlang-reltool
BuildRequires: unzip
BuildArch:     noarch

%description
Erlang Build Tool - build system for erlang projects

%prep
%setup -n %{realname}-%{version}

%build
echo tnx for playing...

%install
install --mode=755 --directory %{buildroot}/usr/bin
install --mode=755 bin/ebt %{buildroot}/usr/bin

%files
%defattr(-,root,root)
/usr/bin/*

