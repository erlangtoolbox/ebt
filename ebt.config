{version, {shell, "./version.sh"}}.
{build, {shell, "printf '%d' $BUILD_NUMBER"}}.
{subdirs, ["ebt"]}.
{profiles, [
    {clean, [
        {prepare, [clean]}
    ]},
    {default, [
        {prepare, [build_plt]},
        {perform, [template]}
    ]}
]}.

{clean, ["ebt.spec"]}.

{template, [
    {"ebt.spec.in", "ebt.spec", [], {$@, $@}}
]}.
