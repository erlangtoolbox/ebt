{version, {shell, "./version.sh"}}.
{build, {shell, "printf '%d' $BUILD_NUMBER"}}.
{subdirs, ["ebt"]}.
{profiles, [
    {clean, [
        {prepare, [clean]}
    ]},
    {default, [
        {perform, [template, build_plt]}
    ]}
]}.

{clean, ["ebt.spec"]}.

{template, [
    {"ebt.spec.in", "ebt.spec", [], {$@, $@}}
]}.

{build_plt, [
    {options, [
        {apps, [kernel, stdlib]}
    ]}
]}.
